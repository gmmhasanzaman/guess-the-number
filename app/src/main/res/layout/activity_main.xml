<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e9e2e2"
        android:text="GUESS THE NUMBER"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="10dp"
        />


    <TextView
        android:id="@+id/questionNoId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#C20101"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/randomNoTVId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Random Number"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:visibility="visible"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/anton"
        android:gravity="center"
        android:textColor="#000"
        android:text="@string/current_number_is_between"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/rangeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/range"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#05AA0E"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDF5F4"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#EDF5F4"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/aladin"
                android:gravity="center"
                android:text="@string/enter_your_guess"
                android:textColor="#000"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <EditText
                    android:id="@+id/inputNumberId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:hint="@string/zero"
                    android:inputType="number"

                    />
                <Button
                    android:id="@+id/submitBtnId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Submit"
                    android:layout_margin="10dp"
                    />


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>