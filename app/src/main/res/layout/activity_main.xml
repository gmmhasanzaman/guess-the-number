<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e9e2e2"
        android:text="GUESS THE NUMBER"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="10dp"
        />


    <TextView
        android:id="@+id/questionNoId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/randomNoTVId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Random Number"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_margin="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Current Number is between"
        android:gravity="center"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/rangeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Range"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000"
        android:text="Enter your guess"
        android:layout_margin="10dp"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <EditText
            android:id="@+id/inputNumberId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:hint="0"
            android:inputType="number"

            />
        <Button
            android:id="@+id/submitBtnId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Submit"
            android:layout_margin="10dp"
            />


    </LinearLayout>

</LinearLayout>